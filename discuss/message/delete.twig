{% extends "layouts/discuss.twig" %}

{% block content %}
<h1>Are you sure you want to delete this message?</h1>
<form action="{% url "destroy_message" %}" method="post" accept-charset="utf-8">
    <fieldset>
        <h3>Excerpt</h3>
        ${ message.body | truncate(500) }

        <p><input type="submit" value="Continue &rarr;" /></p> or <a href="$message.url">Cancel</a>

        <input type="hidden" name="message_id" value="$message.id" id="message_id" />
    </fieldset>
</form>
{% endblock %}
